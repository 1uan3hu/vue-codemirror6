{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": [
    "@tsconfig/node-lts/tsconfig.json",
    "@vue/tsconfig/tsconfig.json"
  ],
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "playwright.config.*",
    "package.json"
  ],
  "compilerOptions": {
    "composite": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "types": ["node"]
  }
}
