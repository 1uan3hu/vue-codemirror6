{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "vue-codemirror6",
  "version": "0.0.3",
  "description": "Codemirror6 for vue",
  "author": {
    "name": "Logue",
    "email": "logue@hotmail.co.jp",
    "url": "https://logue.dev/"
  },
  "homepage": "https://github.com/logue/vue-codemirror6",
  "repository": {
    "type": "git",
    "url": "git@github.com:logue/vue-codemirror6.git"
  },
  "bugs": {
    "url": "https://github.com/logue/vue-codemirror6/issues"
  },
  "engines": {
    "node": ">=16"
  },
  "license": "MIT",
  "main": "./dist/vue-codemirror6.umd.js",
  "module": "./dist/vue-codemirror6.es.js",
  "browser": {
    "./sfc": "./src/components/CodeMirror.vue"
  },
  "exports": {
    ".": {
      "import": "./dist/vue-codemirror6.es.js",
      "require": "./dist/vue-codemirror6.umd.js"
    }
  },
  "types": "./types/entry.d.ts",
  "files": [
    "/dist",
    "/types",
    "/src/components/CodeMirror.vue"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:clean": "rimraf dist && rimraf types",
    "lint": "eslint . --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint && prettier . --write",
    "lint:markup": "vue-tsc",
    "prepare": "husky install"
  },
  "dependencies": {
    "@codemirror/language": "^0.19.7",
    "@codemirror/lint": "^0.19.3",
    "@codemirror/view": "^0.19.42",
    "lodash": "^4.17.21",
    "vue": "^2.6.14",
    "vue-class-component": "^7.2.6",
    "vue-property-decorator": "^9.1.2"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.17",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "@vue/compiler-sfc": "^3.2.31",
    "@vue/eslint-config-typescript": "^10.0.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-prettier-vue": "^3.1.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "eslint-plugin-vue": "^8.4.1",
    "eslint-plugin-vuejs-accessibility": "^1.1.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "prettier": "^2.5.1",
    "prettier-plugin-jsdoc": "^0.3.30",
    "prettier-plugin-md-nocjsp": "^1.2.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.5",
    "vite": "^2.8.1",
    "vite-plugin-eslint": "^1.3.0",
    "vite-plugin-vue2": "^1.9.3",
    "vue-eslint-parser": "^8.2.0",
    "vue-template-compiler": "^2.6.14",
    "vue-tsc": "^0.31.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{vue,htm,html}": [
      "eslint --fix --cache"
    ],
    "*.{js,ts,json,yml,yaml,htm,html}": "eslint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint",
    "*": "prettier -w -u"
  }
}
