{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "vue-codemirror6",
  "version": "0.6.2",
  "description": "CodeMirror6 Component for vue2 and vue3",
  "keywords": [
    "vuejs",
    "vue",
    "vue-components",
    "vue-codemirror",
    "code-editor",
    "text-editor",
    "vue2",
    "vue3",
    "web-editor",
    "vue-plugin",
    "vue-component",
    "codemirror-editor",
    "vue-resource",
    "codemirror6"
  ],
  "author": {
    "name": "Logue",
    "email": "logue@hotmail.co.jp",
    "url": "https://logue.dev/"
  },
  "homepage": "https://github.com/logue/vue-codemirror6",
  "repository": {
    "type": "git",
    "url": "git@github.com:logue/vue-codemirror6.git"
  },
  "bugs": {
    "url": "https://github.com/logue/vue-codemirror6/issues"
  },
  "engines": {
    "node": ">=16.15.1",
    "yarn": ">=1.22.4"
  },
  "packageManager": "yarn@3.2.1",
  "license": "MIT",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "clean": "rimraf node_modules/.vite && npx vue-demi-fix",
    "build": "vite build & vue-tsc --declaration --emitDeclarationOnly",
    "build:analyze": "vue-tsc --noEmit && vite build --mode analyze",
    "build:docs": "vite build --config vite.config.docs.ts",
    "build:clean": "rimraf dist",
    "lint": "eslint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint && prettier . -w -u",
    "lint:markup": "vue-tsc --noEmit",
    "preview": "vite preview --config vite.config.docs.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "codemirror": "^6.0.0",
    "vue-demi": "latest"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.6.2",
    "vue": "^2.6.14 || ^3.2.37"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "devDependencies": {
    "@codemirror/lang-javascript": "^6.0.0",
    "@codemirror/lang-markdown": "^6.0.0",
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/eslint-config-prettier": "^7.0.0",
    "eslint": "^8.18.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.3",
    "eslint-plugin-tsdoc": "^0.2.16",
    "eslint-plugin-vue": "^9.1.1",
    "eslint-plugin-vuejs-accessibility": "^1.2.0",
    "eslint-plugin-yaml": "^0.5.0",
    "eslint4b-prebuilt": "^6.7.2",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.2",
    "lodash": "^4.17.21",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "rollup-plugin-visualizer": "^5.6.0",
    "typescript": "^4.7.4",
    "vite": "^2.9.12",
    "vite-plugin-checker": "^0.4.6",
    "vue": "^3.2.37",
    "vue-eslint-parser": "^9.0.2",
    "vue-tsc": "^0.38.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,htm,html}": "eslint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint",
    "*": "prettier -w -u"
  }
}
