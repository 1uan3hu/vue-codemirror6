{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "vue-codemirror6",
  "version": "1.3.0",
  "license": "MIT",
  "description": "CodeMirror6 Component for vue2 and vue3.",
  "keywords": [
    "vuejs",
    "vue",
    "vue-components",
    "vue-codemirror",
    "code-editor",
    "text-editor",
    "vue2",
    "vue3",
    "web-editor",
    "vue-plugin",
    "vue-component",
    "codemirror-editor",
    "vue-resource",
    "codemirror6"
  ],
  "type": "module",
  "author": {
    "name": "Logue",
    "email": "logue@hotmail.co.jp",
    "url": "https://logue.dev/"
  },
  "homepage": "https://github.com/logue/vue-codemirror6",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/logue/vue-codemirror6.git"
  },
  "bugs": {
    "url": "https://github.com/logue/vue-codemirror6/issues"
  },
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "CHANGELOG.md",
    "/dist",
    "./src/components/CodeMirror.ts"
  ],
  "browser": {
    "./sfc": "./src/components/CodeMirror.ts"
  },
  "engines": {
    "yarn": ">=1.22.19"
  },
  "packageManager": "yarn@4.1.0",
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "clean": "rimraf node_modules/.vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "build:analyze": "vite build --mode=analyze",
    "build:clean": "rimraf dist docs",
    "build:docs": "vite build --mode=docs",
    "lint": "eslint . --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint && prettier . --write",
    "preview": "vite preview --mode=docs",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "prepare": "husky install",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "dependencies": {
    "codemirror": "^6.0.1",
    "vue-demi": "latest"
  },
  "peerDependencies": {
    "vue": "^2.7.14 || ^3.4"
  },
  "devDependencies": {
    "@codemirror/lang-javascript": "^6.2.2",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/lang-markdown": "^6.2.5",
    "@codemirror/lang-vue": "0.1.2",
    "@eslint/js": "^9.1.1",
    "@tsconfig/node-lts": "^20.1.3",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/compiler-sfc": "^3.4.24",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/tsconfig": "^0.5.1",
    "@vueuse/core": "^10.9.0",
    "bootstrap": "^5.3.3",
    "eslint": "^9.1.1",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-linter-browserify": "^9.1.1",
    "eslint-plugin-html": "^8.1.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^17.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "eslint-plugin-vue": "latest",
    "eslint-plugin-vuejs-accessibility": "^2.3.0",
    "eslint-plugin-yaml": "^0.5.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass": "^1.75.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.7.1",
    "vite": "^5.2.10",
    "vite-plugin-banner": "^0.7.1",
    "vite-plugin-checker": "^0.6.4",
    "vite-plugin-dts": "^3.9.0",
    "vue": "^3.4.24",
    "vue-eslint-parser": "^9.4.2",
    "vue-markdown-wasm": "^0.4.0",
    "vue-tsc": "^2.0.14"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,htm,html,vue}": "eslint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint",
    "*": "prettier -w -u"
  },
  "resolutions": {
    "json5": ">=2.2.3",
    "ip": ">=2.0.1",
    "lodash": ">=4.17.21",
    "postcss": ">=8.4.31",
    "semver": ">=7.5.3",
    "tar": ">=6.2.1",
    "yaml": ">=2.3.2"
  }
}
